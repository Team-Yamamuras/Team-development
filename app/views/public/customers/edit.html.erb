<div class="container-fluid registration py-5">
  <div class="row">
    <div class="offset-2">
      <h2 class="red-border px-3 table-secondary">会員情報編集</h2>
    </div>
  </div>

  <div class="row">
    <%= form_with model: @customer, url: customers_infomation_path, method: :patch do |f| %>
      <table class="table table-borderless">
        <tr>
          <td>氏名</td>
          <td><%= f.text_field :first_name, autocomplete: "first_name" %> <%= f.text_field :last_name, autocomplete: "last_name" %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= f.text_field :first_name_kana, autocomplete: "first_name_kana" %> <%= f.text_field :last_name_kana, autocomplete: "last_name_kana" %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= f.text_field :zip_code, autocomplete: "zip_code" %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= f.text_field :address, size: "40*40", autocomplete: "address" %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= f.telephone_field :phone_number, autocomplete: "phone_number" %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= f.text_field :email, size: "40*40", autocomplete: "email" %></td>
        </tr>
        <tr>
        <td><%= f.submit '編集内容を保存', class: "btn btn-success" %></td>
        </tr>
        <% end %>
      </table>
  </div>

  <div class="col-xs-10 mt-3">

    <%= link_to '退会する', customers_quit_path, class: "btn btn-danger mt-2"%>
  </div>
</div>



