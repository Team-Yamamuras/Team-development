<div class= "container my-5">
  <div class= "row">
    <h2>商品編集</h2>
  </div>

  <div class= "row d-flex justify-content-center">
    <% if flash[:item_updated_error] %>
    <span class="text-danger"><%= flash[:item_updated_error] %></span>
    <% end %>
  </div>
  <%= form_for(@item, url: edit_admin_item_path) do |f| %>
  <div class="row mt-3">
    <div class="col-sm-3">
      <%= f.label :商品画像 %>
      <%= f.file_field :image %>
    </div>
    <div class="col-sm-5">
      <div class="form-group row">
        <%= f.label :商品名, class: "col-sm-4" %>
        <%= f.text_field :name, class: "form-control col-sm-8" %>
      </div>
      <div class="form-group row">
        <%= f.label :商品説明, class: "col-sm-4" %>
        <%= f.text_area :introduction, class: "form-control col-sm-8" %>
      </div>
      <div class="form-group row">
        <%= f.label :ジャンル, class: "col-sm-4" %>
        <%= f.collection_select :category_id, Category.all, :id, :category, class: "form-control col-sm-8" %>
      </div>
      <div class="form-group row">
          <%= f.label :税抜価格, class: "col-sm-4" %>
          <%= f.text_field :price_without_tax, class: "form-control col-sm-7" %>
          <span class="mt-auto ml-3">円</span>
      </div>
      <div class="form-group row">
          <%= f.label :販売ステータス, class: "col-sm-4" %>
          <%= f.select :is_active, [["販売中","販売中"], ["販売停止中","販売停止中"]], class: "form-control col-sm-8" %>
      </div>
    </div>
    <div class="col-sm-3 mt-auto ml-5">
        <%= f.submit :変更を保存, class: "btn btn-primary" %>
    </div>
  </div>
  <% end %>
</div>