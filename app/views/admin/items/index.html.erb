<div class= "container my-5">
  <div class= "row">
    <h2>商品一覧画面</h2>
  </div>
  <div class= "row text-right">
    <%= link_to "+", new_admin_item_path, class: "btn btn-lg rounded-circle text-right ml-auto shadow-sm" %>
  </div>

  <div class= "row mt-1">
    <table class= "table table-hover text-center">
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= link_to item.name, admin_items_path(item.id) %></td>
          <td><%= item.price_without_tax %></td>
          <td><%= item.category.category %></td>
          <td>
            <% if item.is_active %>
              <p class="text-success">販売中</p>
            <% else %>
              <p class="text-danger">販売停止中</p>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<div class= "container">
  <div class= "row">
    <div class="col-8 offset-md-4 py-2  mt-5">
      <%= paginate @items %>
    </div>
  </div>
</div>
</div>