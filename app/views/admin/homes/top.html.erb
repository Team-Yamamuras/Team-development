<div class="container">
  <div class="row mt-5">
    <h2>管理者トップページ</h2>
  </div>

  <h2 class="my-5">注文履歴一覧</h2>
  <table class="table">
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>   
      </thead>
      
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td>
            <%= link_to admin_orders_path(order) do%>
              <%= order.created_at.strftime("%Y-%m-%d %H:%M:%S")%>
            <% end %>
          </td>
          <td><%= order.name %></td>
          <td>
            <% sum = 0 %>
            <% order.ordered_items.each do |ordered_item| %>
              <% sum += ordered_item.count %>
            <% end %>
            <%= sum  %>
          </td>
          <td><%= order.status %></td>
        </tr>
        <% end %>
      </tbody>
    
  </table>
</div>
