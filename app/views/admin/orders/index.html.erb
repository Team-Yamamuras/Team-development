<div class="offset-2">

  <div class="row mt-4">
    <mark class="h4 table-secondary">注文履歴一覧</mark>
  </div>

  <table class="table table-bordered col-11">
    <thead>
      <tr>
        <th class="table-secondary">購入日時</th>
        <th class="table-secondary">購入者</th>
        <th class="table-secondary">注文個数</th>
        <th class="table-secondary">注文ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |orders| %>
        <tr>
          <td>
            <%= link_to admin_order_path(orders) do %>
              <%= orders.created_at.to_s(:db) %>
            <% end %>
          </td>
          <td><%= orders.name %></td>
          <td>
            <% sum = 0 %>
            <% orders.ordered_items.each do |ordered_item| %>
              <% sum += ordered_item.count %>
            <% end %>
            <%= sum  %>
          </td>
          <td><%= orders.status_i18n %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <div class= "container" >
    <div class= "row" >
      <div class= "col-4 offset-md-4 py-2 mt-5" >
        <%= paginate @orders %>
      </div>
    </div>
  </div>
  
  
</div>