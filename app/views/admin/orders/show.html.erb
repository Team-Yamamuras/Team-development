<div class="offset-2">

  <div class="row mt-4">
    <mark class="h4 table-secondary">注文履歴詳細</mark>
  </div>

  <table class="table table-borderless">
    <thead>
        <tr>
          <th><strong>購入者</strong></th>
          <th>
          <%#= link_to admin_customer_path(@customer) do %>
          <%= @customer.first_name %><%= @customer.last_name %>
          <%# end %>
          </th>
        </tr>
    </thead>
    <tbody>
        <tr>
          <th><strong>注文日</strong></th>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <th><strong>配送先</strong></th>
          <td><%= @order.address %></td>
        </tr>
        <tr>
          <th><strong>支払方法</strong></th>
          <td><%= @order.payment %></td>

        </tr>
        <tr>
          <th><strong>注文ステータス</strong></th>
          <td>

          </td>
        </tr>
    </tbody>
  </table>

  <div class="row">
    <div class="col-6">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
          </tr>
        </thead>
          <%# @ordered_items.each do |t| %>
          <%# @total += (order_detail.price * order_detail.amount*1.1).floor %>
        <tbody>
          <tr>
            <th><%= t.item.name %></th>
            <th><%= t.item.price__tax_included %></th>
            <th><%= t.count %></th>
            <th>¥<%= price_tax_included.to_s(:delimited) %></td>
            <th>

            </th>
          </tr>
        </tbody>

        <%# end %>
      </table>
    </div>
  </div>


    <div class="col-5">
      <table class="table table-borderless">
        <thead>
          <tr>
            <th><strong>商品合計</strong><%= "  " + "  " %><%= @total %>円</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th><strong>送料</strong><%= "  " + "  " %><%= @shopping_cost %>円</th>
          </tr>
          <tr>
            <th><strong>請求金額合計</strong><%= "  " + "  " %><%= @total + @shopping_cost %>円</th>
          </tr>
        </tbody>
      </table>
    </div>

</div>