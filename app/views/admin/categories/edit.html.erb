<div class="container">
  <div class="row mt-4">
    <mark class="h4 table-secondary">ジャンル</mark>
  </div>

  <%= form_with model: @category, url: admin_category_path(@category.id), method: :patch do |f| %>
    <table class="table table-borderless">
      <tr>
        <th>ジャンル名</th>
        <th><%= f.text_field :category %></th>
        <th><%= f.submit "変更を保存", class: "btn btn btn-success" %></th>
      </tr>
    </table>
  <% end %>
</div>